<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.type_name.capitalize, category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:author_id] %>
<%= link_to 'New Category', new_category_path %>
<% else %>
  <%= link_to'You must be logged in to create new category', '/login'%>
<% end %>
