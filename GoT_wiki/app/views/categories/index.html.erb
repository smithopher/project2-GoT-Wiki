<p id="notice"><%= notice %></p>

<h1 class = 'headline'>Categories</h1>
  <ul>
    <% @categories.order(:type_name).each do |category| %>
      <li class = 'listing'><%= link_to category.type_name.capitalize, category %></li>
    <% end %>
  </ul>
<br>
<div class = 'create'>
  <% if session[:author_id] %>
  <%= link_to 'New Category', new_category_path %>
  <% else %>
    <%= link_to'You must be logged in to create new category', '/login'%>
  <% end %>
</div>
